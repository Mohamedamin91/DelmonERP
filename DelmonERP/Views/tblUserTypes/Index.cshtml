@model IEnumerable<DatabaseAcess.tblUserType>

@{
    ViewBag.Title = "User Types";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>

<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            @Html.ActionLink("Add User Type ", "Create", null, new { @style = "float:left;", @class = "btn btn-primary" })
            <input type="text" id="searchusertype" name="searchusertype" class="form-control col-md-3" style="float:right" ; placeholder="Search here" />
        </div>
    <div class="card body">
        @* start table responsive *@
            <div class="table table-striped table-bordered table-hover">
                <table class="table" id="datatable">
                    <thead>
                        <tr>
                            <th>
                                 User Type
                            </th>
                            <th>Action's</th>
                        </tr>

                    </thead>
                    <tbody id="usertypelist">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserType)
                                </td>
                                <td>
                                    @Html.ActionLink("Update ", "Edit", new { id = item.UserTypeID }, new { @class = "btn btn-pill-left btn-inverse btn-primary fa fa-edit" })
                                    @Html.ActionLink("View ", "Details", new { id = item.UserTypeID }, new { @class = "btn btn-pill-right btn-inverse btn-primary fa fa-exclamation" })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#searchusertype").on("keyup", function () {
            var value = $(this).val().toLocaleLowerCase();
            $("#usertypelist tr ").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>