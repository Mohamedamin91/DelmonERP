@model IEnumerable<DatabaseAcess.tblUser>

@{
    ViewBag.Title = "All Users";
}


<script src="~/Scripts/jquery-3.4.1.js"></script>

<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            <div class="row">
                <h4 class="col-md-8" style="float:left">All Users</h4>
                <input type="text" id="searchuser" name="searchuser" class="form-control col-md-3" style="float:right" ; placeholder="Search here" />
                @*@Html.ActionLink("Add User Type ", "Create", null, new { @style = "float:left;", @class = "btn btn-primary" })*@
            </div>
        </div>
        <div class="card body">
            @* start table responsive *@
            <div class="table table-striped table-bordered table-hover">
                <table class="table" id="datatable">
                    <thead>
                        <tr>
                            <th>
                                Full name
                            </th>
                            <th>
                                Email
                            </th>
                          
                             <th>
                                Contact no
                            </th>
                            <th>
                                UserName
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                User Type
                            </th>
                        </tr>
                    </thead>
                    <tbody id="listusers">
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblUserType.UserType)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.UserID }, new { @class = "btn btn-primary" }) 
                                    @Html.ActionLink("Details", "Details", new { id = item.UserID }, new { @class = "btn btn-info" }) 
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#searchuser").on("keyup", function () {
            var value = $(this).val().toLocaleLowerCase();
            $("#listusers tr ").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>