@model IEnumerable<DatabaseAcess.tblBranch>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<div class="card">
    <div class="card card-flat">
        <div class="card-header">
            @Html.ActionLink("Add Branch ", "Create", null, new { @style = "float:left;", @class = "btn btn-primary" })
            <input type="text" id="searchbranch" name="searchbranch" class="form-control col-md-3" style="float:right" ; placeholder="Search here" />

        </div>
        <div class="card body">
            @* start table responsive *@
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id=" = dataTable">
                    <thead>
                        <tr>
                            <th>
                                Level
                            </th>
                            <th>
                                Branch Title
                            </th>
                            <th>
                                Conttact No
                            </th>
                            <th>
                                Branch Address
                            </th>


                            <th></th>
                        </tr>
                        </thead>
                    <tbody id="allbranches">

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblBranchType.BranchType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BranchName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BranchContact)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BranchAddress)
                                </td>


                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.BranchID },new {@class="btn btn-primary" } ) |
                                    @Html.ActionLink("Details", "Details", new { id = item.BranchID }, new { @class = "btn btn-info" })
                                </td>
                            </tr>
                        }
                        </tbody>
                   </table>
                </div>
            </div>
       </div>
</div>
                <script type="text/javascript">
                    $(document).ready(function () {
                        $("#searchbranch").on("keyup", function () {
                            var value = $(this).val().toLocaleLowerCase();
                            $("#allbranches tr ").filter(function () {
                                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                            });
                        });
                    });
                </script>
